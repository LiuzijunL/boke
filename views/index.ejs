<%- include('./layout/header.ejs') %>

    <div class="container">
      <h1>文章列表</h1>
      <% articles.forEach(item => { %>
      <div class="list-group">
        <a href="/article/info/<%= item.id %>" class="list-group-item">
          <%= item.title %>
          <span class="badge" style="background-color: #5bc0de;">发表时间：<%= item.ctime %></span>
          <span class="badge" style="background-color: #f0ad4e;">作者昵称：<%= item.nickname %></span>
        </a>
      </div>
    <% }) %>
    
    <nav aria-label="Page navigation">
      <ul class="pagination">
        <li class="<%= size-1 === 0? 'disabled':'' %>">
          <a href="?page=<%= size-1 == 0 ? 1 : size-1 %>" aria-label="Previous">
            <span aria-hidden="true">&laquo;</span>
          </a>
        </li>
        <% for(var i = 0 ; i < totalPage ; i++) {%>
        <li class="<%= size == (i+1) ? 'active' : '' %>"><a href="?page=<%= i+1 %>"><%= i+1 %></a></li>
        <% } %>
        <li class="<%= size+1 > totalPage? 'disabled':'' %>">
          <a href="?page=<%= size+1 > totalPage? totalPage : size+1 %>" aria-label="Next">
            <span aria-hidden="true">&raquo;</span>
          </a>
        </li>
      </ul>
    </nav>
  </div>

<%- include('./layout/footer.ejs') %>
    